<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculateArea.HealthRecommendationsPage"
             Title="Health Recommendations">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <Label Text="Health Recommendations"
                   HorizontalOptions="Center"
                   FontSize="Large"
                   FontAttributes="Bold"/>

            <Label Text="{Binding Recommendations}"
                   HorizontalOptions="Center"
                   FontSize="Medium"/>

            <Button Text="Back to BMI Result"
                    HorizontalOptions="Center"
                    Clicked="BtnBackToBMIResult_Clicked"/>

            <Button Text="Back to Input"
                    HorizontalOptions="Center"
                    Clicked="BtnBackToInput_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
